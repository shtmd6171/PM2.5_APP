<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="138dp"
    android:layout_below="@+id/mid_bar"
    android:layout_alignParentStart="true"
    android:layout_marginStart="0dp"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/item_location1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_back_gray"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:text="지역구 지역명"
        android:textColor="#999999"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_location1"
        android:layout_marginStart="10dp"
        android:textColor="#000"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:text="미세먼지 : "
        android:textSize="23sp" />

    <TextView
        android:id="@+id/dust_value2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_location1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/t3"
        android:textColor="#000"
        android:textSize="23sp"
        android:text="dsadas"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dust_value3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_location1"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/t3"
        android:textColor="#000"
        android:text="dsadsadas"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_location1"
        android:textColor="#000"
        android:layout_marginStart="10dp"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="10dp"
        android:text="초미세먼지 : "
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/star1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/star" />

</RelativeLayout>

